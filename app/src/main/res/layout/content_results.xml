<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.xana.thetttecommunityquiz.Results"
    android:id="@+id/results_are_here"
    tools:showIn="@layout/activity_results">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"

        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="230dp"
            android:layout_height="110dp"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/empty_cloud" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-74dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/score_user"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/textResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Large Text"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="0.03"
            android:textColor="#010101"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:background="#ffffff" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/prize"
            android:contentDescription="@string/accept"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/streakalive"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="#000000"
            android:background="#ffffff" />

        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:id="@+id/continue_Button"
            android:text="Answers"
            android:textColor="#fefefe"
            android:textSize="26sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button"
            android:layout_gravity="center_horizontal" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad"
            android:layout_marginTop="11dp"
            android:layout_gravity="center_horizontal">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>

</RelativeLayout>
